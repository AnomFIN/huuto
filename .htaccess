# Huuto - Web Hotel Configuration
# Minimalistic configuration for maximum compatibility

# Security: Disable directory listing
Options -Indexes

# Basic security headers
<IfModule mod_headers.c>
    Header set X-Content-Type-Options "nosniff"
</IfModule>

# Block access to sensitive files only
<Files "*.sql">
    Require all denied
</Files>

<Files "*.lock">
    Require all denied
</Files>

<Files ".env">
    Require all denied
</Files>

<Files ".env.*">
    Require all denied
</Files>

# Allow PHP files to work normally
# All direct .php files work: index.php, admin.php, auction.php etc.

# Default document
DirectoryIndex index.php

# PHP error handling (optional - can be removed if causes issues)
<IfModule mod_php.c>
    php_value upload_max_filesize 10M
    php_value post_max_size 10M
    php_value memory_limit 128M
</IfModule>
