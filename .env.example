# Application Configuration
APP_ENV=production
APP_DEBUG=false
SITE_NAME="Huuto - Suomalainen Huutokauppa"
BASE_URL=http://localhost:8000
TIMEZONE=Europe/Helsinki

# Database
DB_HOST=localhost
DB_NAME=huuto_db
DB_USER=root
DB_PASS=
DB_CHARSET=utf8mb4

# Security
SESSION_LIFETIME=7200
CSRF_TOKEN_LIFETIME=3600
PASSWORD_MIN_LENGTH=8
MAX_LOGIN_ATTEMPTS=5
LOGIN_LOCKOUT_TIME=900

# Admin panel password (change this to a strong, unique password!)
ADMIN_PASSWORD=
MAX_BID_ATTEMPTS=10
BID_RATE_WINDOW=60

# File Uploads
UPLOAD_MAX_SIZE=5242880
UPLOAD_MAX_FILES=8

# Email
MAIL_ENABLED=false
MAIL_DEV_MODE=true
MAIL_FROM=noreply@huuto.fi
MAIL_FROM_NAME=Huuto

# SMTP (optional - leave empty to use PHP mail())
SMTP_HOST=
SMTP_PORT=587
SMTP_USERNAME=
SMTP_PASSWORD=
SMTP_ENCRYPTION=tls

# Authentication
AUTH_METHOD=email
REQUIRE_EMAIL_VERIFICATION=false

# Google OAuth (optional)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# Auction Settings
DEFAULT_BID_INCREMENT=1.00
ANTI_SNIPE_ENABLED=true
ANTI_SNIPE_WINDOW=60
ANTI_SNIPE_EXTENSION=120
ANTI_SNIPE_MAX_EXTENSIONS=5
